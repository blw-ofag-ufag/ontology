@prefix : <https://agriculture.ld.admin.ch/foag/system-map#> .
@prefix dcterms: <http://purl.org/dc/terms/> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix schema: <https://schema.org/> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

: a owl:Ontology ;
    dcterms:creator "Federal Office for Agriculture" ;
    dcterms:description "Eine Ontologie zur Modellierung von Organisationen, IT-Systemen und Daten für das Schweizer Bundesamt für Landwirtschaft (FOAG)."@de,
        "An ontology to model organizations, IT systems and data for the Swiss Federal Office for Agriculture FOAG."@en ;
    dcterms:title "DigiAgriFoodCH Systemlandkarte"@de,
        "DigiAgriFoodCH System Map"@en ;
    owl:versionInfo "0.1" .

:contains a owl:ObjectProperty ;
    rdfs:label "beinhaltet"@de,
        "contains"@en ;
    rdfs:comment "This relationship indicates that an IT system X contains the information unit Y. For example, AGIS contains information about farming area in Switzerland."@en ;
    rdfs:domain :System ;
    rdfs:range :Information .

:derivedFrom a owl:ObjectProperty ;
    rdfs:label "ist abgeleitet von"@de,
        "is derived from"@en ;
    rdfs:domain :Information ;
    rdfs:range :Information .

:operates a owl:ObjectProperty ;
    rdfs:label "betreibt"@de,
        "operates"@en ;
    rdfs:comment "Diese Beziehung zeigt an, dass Organisation X für das Betriebssystem Y verantwortlich ist."@de,
        "This relationship indicates that organization X is in charge of operating system Y."@en ;
    rdfs:domain schema:Organization ;
    rdfs:range :System ;
    rdfs:scopeNote "Wenn Organisation Y den Betrieb eines Systems X an einen Dienstleister Z auslagert, verwenden Sie weiterhin diese Betriebsbeziehung zwischen X und Y, da sie eher die Verantwortlichkeit als den technischen Betrieb widerspiegelt."@de,
        "If organization Y outsources the operation of a system X to a service provider Z, still use this operating relationship between X and Y since it reflects responsability rather than technical operation."@en .

:organizationAbbreviation a owl:DatatypeProperty ;
    rdfs:label "Organisationsabkürzung"@de,
        "Organization abbreviation"@en ;
    rdfs:domain schema:Organization ;
    rdfs:range xsd:string .

:belongsTo a owl:ObjectProperty ;
    rdfs:label "gehört zu"@de,
        "belongs to"@en ;
    rdfs:comment "Diese Beziehung zeigt an, dass die Organisation X zur Sektor bzw. dem Bereich Y gehört."@de,
        "This relationship indicates that an organization X belongs to some sector Y."@en ;
    rdfs:domain schema:Organization ;
    rdfs:range :Sector .

:owns a owl:ObjectProperty ;
    rdfs:label "besitzt (teilweise)"@de,
        "(partially) owns"@en ;
    rdfs:domain schema:Organization ;
    rdfs:range schema:Organization .

:systemAbbreviation a owl:DatatypeProperty ;
    rdfs:label "Abkürzung des IT-Systems"@de,
        "System abbreviation"@en ;
    rdfs:domain :System ;
    rdfs:range xsd:string .

schema:memberOf a owl:ObjectProperty ;
    rdfs:label "ist eine Mitgliedsorganisation von"@de,
        "is a member organization of"@en ;
    rdfs:comment "Diese Beziehung gibt an, dass eine Organisation X eine Mitgliedsorganisation einer anderen Organisation Y ist."@de,
        "This relationship indicates that an organization X is a member organization of another organization Y."@en ;
    rdfs:domain schema:Organization ;
    rdfs:range schema:Organization ;
    rdfs:scopeNote "Verwenden Sie diese Beziehung, um Mitgliedschaften von Branchenorganisationen, Berufsverbänden oder anderen kollektiven Einrichtungen darzustellen, bei denen Organisationen als Mitglieder teilnehmen. Verwenden Sie diese Eigenschaft nicht für individuelle Mitgliedschaften oder informelle Beziehungen."@de,
        "Use this relationship for representing memberships of industry organizations, professional associations, or other collective entities where organizations participate as members. Avoid using this property for individual memberships or informal relationships."@en .

schema:subOrganization a owl:ObjectProperty ;
    rdfs:label "beinhaltet Suborganisation"@de,
        "contains Suborganization"@en ;
    rdfs:domain schema:Organization ;
    rdfs:range schema:Organization .

:subsector a owl:ObjectProperty ;
    rdfs:label "hat untergeordnete Sektor"@de,
        "has subsector"@en ;
    rdfs:domain :Sector ;
    rdfs:range :Sector ;
    owl:inverseOf :supersector .

:supersector a owl:ObjectProperty ;
    rdfs:label "hat übergeordnete Sektor"@de,
        "has supersector"@en ;
    rdfs:domain :Sector ;
    rdfs:range :Sector ;
    owl:inverseOf :subsector .

:Information a owl:Class ;
    rdfs:label "Informationseinheit"@de,
        "Information unit"@en ;
    rdfs:comment "A piece of information in an IT system. Could be anything, really."@en .

:System a owl:Class ;
    rdfs:label "IT-System"@de,
        "IT system"@en ;
    rdfs:comment "Jedes IT-System (im abstrakten Sinne) mit einer oder mehreren Datenbanken. Beispiele für solche Systeme sind AGIS, das BI-System ASTAT des BLW oder die kantonalen IT-Systeme für die Landwirtschaft."@de,
        "Any IT system (in a abstracted sense) with one or many databases. Examples for such systems would be AGIS, the FOAG BI system ASTAT, or the cantonal agricultural IT systems."@en .

:Sector a owl:Class ;
    rdfs:label "Sektor"@de,
        "Sector"@en ;
    skos:altLabel "Bereich"@de .

schema:Organization a owl:Class ;
    rdfs:label "Organisation"@de,
        "Organization"@en ;
    rdfs:comment "Eine (juristische) Einheit wie ein Unternehmen, eine Behörde oder eine Non-Profit-Organisation oder eine Untereinheit einer solchen."@de .

